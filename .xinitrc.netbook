#!/bin/sh

###########################

# Custom xinitrc goes here

###########################

wm_bin="$1"
xrdb -merge ~/.Xresources

if [ -f "$HOME/.Xmodmap" ]; then
  /usr/bin/xmodmap $HOME/.Xmodmap
fi

exec ${wm_bin}
